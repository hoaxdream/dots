[colors]
black = ${xrdb:color0:#1d2021}
darkred = ${xrdb:color1:#cc241d}
darkgreen = ${xrdb:color2:#98971a}
darkyellow = ${xrdb:color3:#d79921}
darkblue = ${xrdb:color4:#458588}
darkmagenta = ${xrdb:color5:#b16286}
darkcyan = ${xrdb:color6:#689d6a}
lightgray = ${xrdb:color7:#a89984}
gray = ${xrdb:color8:#928374}
red = ${xrdb:color9:#fb4934}
green = ${xrdb:color10:#b8bb26}
yellow = ${xrdb:color11:#fabd2f}
blue = ${xrdb:color12:#83a598}
magenta = ${xrdb:color13:#d3869b}
cyan = ${xrdb:color14:#8ec07c}
white = ${xrdb:color15:#ebdbb2}
background = ${xrdb:background:#1d2021}
foreground = ${xrdb:foreground:#ebdbb2}

[bar/koltea]
monitor = ${env:MONITOR:}
width = 100%
height = 28
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = false
enable-ipc = true

separator = "|"

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = {$xrdb:red}

border-size = 0
border-color = ${colors.white}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 0

font-0 = mono:pixelsize=9;1
font-1 = Noto Color Emoji:scale=12:style=Regular;2
font-2 = JoyPixels:pixelsize=12;1

; Modules
modules-left = bspwm xwindow
;modules-center = 
modules-right = music pulseaudio netdown netup temperature memory cpu mutt-wizard eth date time

tray-position = right
tray-padding = 0

wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/mutt-wizard]
type = custom/script
exec = mailbox
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.gray}
#format-underline = ${colors.red}

click-left = $TERMINAL -e neomutt

[module/xwindow]
type = internal/xwindow
label = %title:0:45:...%
format-foreground = ${colors.blue}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.blue}
label-focused-underline = ${colors.yellow}
label-focused-padding = 1

label-occupied = %index%
label-occupied-underline = ${colors.blue}
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.lightgray}
label-empty-padding = 1

[module/mpd]
type = internal/mpd
format-online = <label-song> <label-time>

click-left = $TERMINAL -e ncmpcpp
click-right = mpd toggle

label-song = %artist% - %title%
label-song-maxlen = 70
label-song-ellipsis = true

format-paused-foreground = ${colors.gray}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

#format-connected-underline = ${colors.darkgreen}
;format-connected-underline = ${colors.green}
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.gray}
label-connected = %local_ip%

;format-disconnected = 
format-disconnected = <label-disconnected>
#format-disconnected-underline = ${self.format-connected-underline}
label-disconnected =  %ifname%
label-disconnected-foreground = ${colors.gray}

[module/date]
type = internal/date
interval = 1

date = "%a %b %d"

format-prefix = " "
format-prefix-foreground = ${colors.gray}
#format-underline = ${colors.blue}

label = %date% 

[module/time]
type = internal/date
interval = 1

time = "%I:%M:%S %p"
format-prefix = " "
format-prefix-foreground = ${colors.gray}

label = %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.gray}
label-muted = muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.blue}
bar-volume-foreground-1 = ${colors.blue}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = =
bar-volume-fill-font = 2
bar-volume-empty = =
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.gray}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.gray}
#format-underline = ${colors.darkcyan}
label = %percentage_used%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
#format-underline = ${colors.red}
format-warn = <ramp> <label-warn>
#format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.darkmagenta}

ramp-0 =
ramp-1 =
ramp-2 =
ramp-3 =
ramp-4 =
ramp-foreground = ${colors.gray}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.gray}
#format-underline = ${colors.red}
label = %percentage%%

[module/netup]
type = internal/network
interface = enp0s31f6
label-connected = "%upspeed:7%"
format-connected = <label-connected>
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.gray}
#format-connected-underline = ${colors.darkyellow}

[module/netdown]
type = internal/network
interface = enp0s31f6
label-connected = "%downspeed:7%"
format-connected = <label-connected>
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.gray}
#format-connected-underline = ${colors.darkyellow}

[module/music]
type = custom/script
exec = music
click-left = $TERMINAL -e ncmpcpp
interval = 0.3

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

